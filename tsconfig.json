{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "include": ["src/**/*"],
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2022",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@components/*": ["src/components/*"]
        }
    }
}
